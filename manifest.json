{
  "manifest_version": 2,
  "name": "YT Shorts Redirect",
  "version": "1.0",
  "description": "Automatically redirects YouTube Shorts URLs to Watch URLs.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "48": "images/icon48.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["main.js"]
    }
  ]
}
